<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="GanaKana.LearnPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GanaKana"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    
    Loaded="Page_Loaded"
    NavigationCacheMode="Enabled">

    <Page.Resources>

        <DataTemplate 
            x:Key="CharacterTemplate"
            x:DataType="local:CharData">

            <StackPanel Width="80" Height="120" Margin="10,10,10,10">
                <TextBlock 
                    Text="{x:Bind GanaKana}" 
                    HorizontalAlignment="Center"
                    FontSize="54"
                    />
                <TextBlock 
                    Margin="0,10,0,0"
                    Text="{x:Bind Romaji}" 
                    HorizontalAlignment="Center" 
                    FontSize="20" />
            </StackPanel>

        </DataTemplate>

        <DataTemplate 
            x:Key="YouonTemplate"
            x:DataType="local:CharData">
            <Border>
                <StackPanel Width="160" Height="120" Margin="10,10,10,10">
                    <TextBlock 
                        Text="{x:Bind GanaKana}" 
                        HorizontalAlignment="Center"
                        FontSize="54"
                        />
                    <TextBlock 
                        Margin="0,10,0,0"
                        Text="{x:Bind Romaji}" 
                        HorizontalAlignment="Center" 
                        FontSize="20" />
                </StackPanel>
            </Border>
        </DataTemplate>

    </Page.Resources>


    <ScrollViewer
        HorizontalScrollBarVisibility="Disabled"
        VerticalScrollBarVisibility="Auto">

        <StackPanel
            Margin="64,40,64,40">

            <TextBlock
                Text="Hiragana" 
                Style="{StaticResource TitleTextBlockStyle}" />

            <GridView
                x:Name="HiraganaGridView"
                Margin="0,24,0,0"
                HorizontalAlignment="Center"
                ItemTemplate="{StaticResource CharacterTemplate}"
                >
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid 
                        MaximumRowsOrColumns="5"
                        Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
            </GridView>


            <TextBlock
                Text="Katakana"
                Style="{StaticResource TitleTextBlockStyle}"/>

            <GridView
                x:Name="KatakanaGridView"
                Margin="0,24,0,0"
                HorizontalAlignment="Center"
                ItemTemplate="{StaticResource CharacterTemplate}">
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid 
                        MaximumRowsOrColumns="5"
                        Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
            </GridView>


            <TextBlock
                Text="Hiragana Youon"
                Style="{StaticResource TitleTextBlockStyle}"/>

            <GridView
                x:Name="HiraganaYouonGridView"
                Margin="0,24,0,0"
                HorizontalAlignment="Center"
                ItemTemplate="{StaticResource YouonTemplate}">
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid 
                        MaximumRowsOrColumns="3"
                        Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
            </GridView>


            <TextBlock
                Text="Katakana Youon"
                Style="{StaticResource TitleTextBlockStyle}"/>

            <GridView
                x:Name="KatakanaYouonGridView"
                Margin="0,24,0,0"
                HorizontalAlignment="Center"
                ItemTemplate="{StaticResource YouonTemplate}">
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid 
                        MaximumRowsOrColumns="3"
                        Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
            </GridView>

        </StackPanel>

    </ScrollViewer>

</Page>
